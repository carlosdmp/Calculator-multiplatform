<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <TextView
            android:text=":)"
            android:textSize="24sp"
            android:layout_marginTop="20dp"
            android:textAlignment="textEnd"
            android:layout_marginEnd="20dp"
            android:layout_marginStart="20dp"
            android:paddingBottom="20dp"
            android:id="@+id/tv_display"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="end"/>
    <Button
            app:layout_constraintTop_toBottomOf="@id/tv_display"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/b_op8"
            android:id="@+id/b_op7"
            android:text="7"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>
    <Button
            app:layout_constraintTop_toTopOf="@id/b_op7"
            app:layout_constraintStart_toEndOf="@id/b_op7"
            android:id="@+id/b_op8"
            app:layout_constraintEnd_toStartOf="@id/b_op9"
            android:text="8"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>
    <Button
            app:layout_constraintTop_toTopOf="@id/b_op7"
            app:layout_constraintStart_toEndOf="@id/b_op8"
            android:id="@+id/b_op9"
            android:text="9"
            android:layout_width="0dp"
            android:layout_height="wrap_content" app:layout_constraintEnd_toEndOf="parent"/>


    <Button
            app:layout_constraintTop_toBottomOf="@id/b_op7"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/b_op8"
            android:id="@+id/b_op4"
            android:text="4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>
    <Button
            app:layout_constraintTop_toBottomOf="@id/b_op7"
            app:layout_constraintStart_toEndOf="@id/b_op7"
            android:id="@+id/b_op5"
            app:layout_constraintEnd_toStartOf="@id/b_op9"
            android:text="5"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>
    <Button
            app:layout_constraintTop_toBottomOf="@id/b_op7"
            app:layout_constraintStart_toEndOf="@id/b_op8"
            android:id="@+id/b_op6"
            android:text="6"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"/>


    <Button
            app:layout_constraintTop_toBottomOf="@id/b_op4"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/b_op8"
            android:id="@+id/b_op1"
            android:text="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>
    <Button
            app:layout_constraintTop_toBottomOf="@id/b_op4"
            app:layout_constraintStart_toEndOf="@id/b_op7"
            android:id="@+id/b_op2"
            app:layout_constraintEnd_toStartOf="@id/b_op9"
            android:text="2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>
    <Button
            app:layout_constraintTop_toBottomOf="@id/b_op4"
            app:layout_constraintStart_toEndOf="@id/b_op8"
            android:id="@+id/b_op3"
            android:text="3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"/>

    <Button
            app:layout_constraintTop_toBottomOf="@id/b_op1"
            app:layout_constraintStart_toStartOf="@id/b_op1"
            android:id="@+id/b_op0"
            android:text="0"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="@id/b_op1"/>

    <Button
            app:layout_constraintTop_toBottomOf="@id/b_op1"
            app:layout_constraintStart_toStartOf="@id/b_op2"
            android:id="@+id/b_dot"
            android:text=","
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="@id/b_op2"/>

    <Button
            app:layout_constraintTop_toBottomOf="@id/b_op1"
            app:layout_constraintStart_toStartOf="@id/b_op3"
            android:id="@+id/b_clear"
            android:text="C"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="@id/b_op3"/>

    <Button
            app:layout_constraintTop_toBottomOf="@id/b_op0"
            app:layout_constraintStart_toStartOf="@id/b_op1"
            android:id="@+id/b_op_plus"
            android:text="+"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="@id/b_op1"/>

    <Button
            app:layout_constraintTop_toBottomOf="@id/b_op0"
            app:layout_constraintStart_toStartOf="@id/b_op2"
            android:id="@+id/b_op_sub"
            android:text="-"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="@id/b_op2"/>

    <Button
            app:layout_constraintTop_toBottomOf="@id/b_op0"
            app:layout_constraintStart_toStartOf="@id/b_op3"
            android:id="@+id/b_equal"
            android:text="="
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="@id/b_op3"/>

    <TextView
            android:id="@+id/main_text"
            android:textSize="42sp"
            android:layout_margin="5sp"
            android:textAlignment="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

    <TextView
            android:id="@+id/tv_bottom_label"
            android:textSize="18sp"
            android:layout_width="0dp"
            android:textColor="@android:color/black"
            android:textAlignment="center"
            android:layout_height="wrap_content" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="@+id/main_text"/>
</android.support.constraint.ConstraintLayout>